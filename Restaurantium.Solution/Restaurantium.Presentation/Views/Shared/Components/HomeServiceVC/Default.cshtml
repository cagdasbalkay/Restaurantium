@model List<ResultServiceDto>

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Hizmetlerimiz</h5>
            <h1 class="mb-5">Öne Çıkan Hizmetlerimiz</h1>
        </div>
        <div class="row g-4">
            @foreach(var item in Model)
            {
                
            
            <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item rounded pt-3">
                    <div class="p-4">
                        <i class="fa fa-3x @item.iconUrl text-primary mb-4"></i>
                        <h5>@item.serviceName</h5>
                        <p>@item.description</p>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>