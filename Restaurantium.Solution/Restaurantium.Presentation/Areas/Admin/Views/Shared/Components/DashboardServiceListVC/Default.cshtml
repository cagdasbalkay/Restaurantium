@model List<ResultServiceDto>
@{
    int count = 0;
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Son Hizmetler</h4>
            <p class="card-subtitle mb-4 font-size-13">
                Restoranımızdaki Son 4 Hizmetin Listesi.
            </p>

            <div class="table-responsive">
                <table class="table table-borderless table-hover table-centered table-nowrap mb-0">
               
                    <tbody>
                        @foreach(var item in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                       @count
                                    </h5>
                                   
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">@item.serviceName</h5>
                                   
                                </td>
                                <td>
                                    <h5 class="font-size-17 mb-1 font-weight-normal">
                                        <i class="fa-solid fa-wand-sparkles"></i>
                                    </h5>
                                   
                                </td>
                                <td>
                                    <h5 class="font-size-15 mb-1 font-weight-normal">
                                        <a href="/Home/Index/" class="btn btn-info">Sayfada Gör</a>
                                    </h5>
                                    
                                </td>
                            </tr>
                        }
                        





                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>
