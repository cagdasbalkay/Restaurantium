@{
    var currentYear = DateTime.Now.Year;
}

<script src="~/lib/chart.js"></script>

<div class="col-lg-4">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title d-inline-block">Yıllık Abone Sayısı</h4>

            <div style="height: 260px;">
                <canvas id="my1Chart"></canvas>
                <script>
                    var values = document.getElementById('my1Chart').getContext('2d');
                    var myChart = new Chart(values, {
                        type: 'line',
                        data: {
                            labels: ['@(currentYear - 4)', '@(currentYear - 3)', '@(currentYear - 2)', '@(currentYear - 1)', '@currentYear'],
                            datasets: [{
                                label: 'Yıllık Abone Sayıları',
                                data: [30, 50, 75, 100, 250],
                                borderColor: 'rgba(75,192,192,1)',
                                borderWidth: 1

                            }]
                        },
                        options: {
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                </script>
            </div>

            <div class="row text-center mt-4">
                <div class="col-6">
                    <h4>Son 5 Yıl</h4>
                    <p class="text-muted mb-0">Süre.</p>
                </div>
                <div class="col-6">
                    <h4>541</h4>
                    <p class="text-muted mb-0">Toplam Abone</p>
                </div>
            </div>
        </div>
    </div>
</div>






