@model List<ResultContactDto>
@{
    int count = 0;
}

<div class="col-xl-6">
    <div class="card">
        <div class="card-body">

            <h4 class="card-title">Gelen Mesajlar</h4>
            <p class="card-subtitle mb-4 font-size-13">
                İletişim alanından gelen son 5 mesaj listesi.
            </p>

            <div class="table-responsive">
                <table class="table table-centered table-hover table-xl mb-0" id="recent-orders">
                    <thead>
                        <tr>
                            <th class="border-top-0">#</th>
                            <th class="border-top-0">Gönderen</th>
                            <th class="border-top-0">Konu</th>
                            <th class="border-top-0">Mesaj</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger at-3" role="alert">
                                <p><i>Daha önce eklenen herhangi bir veri <b>bulunamadı.</b> ekle butonunu kullanarak yeni veri girişi yapabilirsiniz.</i></p>
                            </div>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td class="text-truncate">@count</td>
                                    <td class="text-truncate">@item.Email</td>
                                    <td>
                                        <span class="badge badge-soft-secondary p-2">@item.Subject</span>
                                    </td>
                                    <td class="text-truncate">
                                        @item.Message
                                    </td>

                                </tr>

                            }
                        }
                       
                       
                    </tbody>
                </table>
            </div>

        </div> <!-- end card-body-->
    </div> <!-- end card-->
</div>