@model CreateFooterContactDto
@{
    ViewData["Title"] = "CreateFooterContact";
    ViewData["IncludeValidationScripts"] = true;
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni İletişim Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Tüm bilgileri eksiksiz olarak doldurarak footerde bulunan iletişim bilgilerine  veri ekleme işlemini tamamlayabilirsiniz!</p>

                        <form method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="exampleInputAddress">Adres</label>
                                <input type="text" class="form-control" id="exampleInputAddress" placeholder="Şirkete ait adres bilgisini giriniz." asp-for="Address">
                                @Html.ValidationMessageFor(x => x.Address, null, new { @class = "invalid-feedback d-block" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPhone">Telefon</label>
                                <input type="tel" class="form-control" id="exampleInputPhone" placeholder="Şirkete ait telefon bilgisini giriniz." asp-for="Phone">
                                @Html.ValidationMessageFor(x => x.Phone, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail">Email</label>
                                <input type="email" class="form-control" id="exampleInputEmail" placeholder="Şirkete ait email bilgisini giriniz." asp-for="Email">
                                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "invalid-feedback d-block" })
                            </div>

                      

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


