@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    ViewData["IncludeValidationScripts"] = true;
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Rezervasyon Bilgisi Düzenleme</h4>
                        <p class="card-subtitle mb-4">Tüm bilgileri eksiksiz olarak doldurarak rezervasyon bilgisi düzenleme işlemini tamamlayabilirsiniz!</p>

                        <form method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="BookingID" />
                            <div class="form-group">
                                <label for="exampleInputName">Müşteri Adı</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name">
                                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail">Email</label>
                                <input type="text" class="form-control" id="exampleInputEmail" asp-for="Email">
                                @Html.ValidationMessageFor(x => x.Email, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputDate">Tarih</label>
                                <input type="text" class="form-control" id="exampleInputDate" asp-for="Date">
                                @Html.ValidationMessageFor(x => x.Date, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputNumberOfGuests">Müşteri Sayısı</label>
                                <input type="text" class="form-control" id="exampleInputNumberOfGuests" asp-for="NumberOfGuests">
                                @Html.ValidationMessageFor(x => x.NumberOfGuests, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputSpecialRequest">Özel Talep</label>
                                <input type="text" class="form-control" id="exampleInputSpecialRequest" asp-for="SpecialRequest">
                                @Html.ValidationMessageFor(x => x.SpecialRequest, null, new { @class = "invalid-feedback d-block" })
                            </div>
                           

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


