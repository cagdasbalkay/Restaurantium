@model List<ResultBookingDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Rezervasyon Listesi</h4>
                        <p class="card-subtitle mb-4">Bu sayfada müşterilerin yaptığı rezervasyonları görüntüleyebilir, silebilir yahut güncelleyebilirsiniz.</p>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger at-3" role="alert">
                                <p><i>Daha önce eklenen herhangi bir veri <b>bulunamadı.</p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Müşteri</th>
                                            <th>Email</th>
                                            <th>Tarih</th>
                                            <th>Müşteri Sayısı</th>
                                            <th>Özel Talep</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@count</td>
                                                <td>@item.Name</td>
                                                <td>@item.Email</td>
                                                <td>@item.Date</td>
                                                <td>@item.NumberOfGuests</td>
                                                <td>@item.SpecialRequest</td>



                                                <td><a href="/Admin/Booking/RemoveBooking/@item.BookingID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/Booking/UpdateBooking/@item.BookingID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





