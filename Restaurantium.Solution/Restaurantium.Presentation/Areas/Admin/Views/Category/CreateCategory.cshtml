@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    ViewData["IncludeValidationScripts"] = true;
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Kategori Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Tüm bilgileri eksiksiz olarak doldurarak kategori ekleme işlemini tamamlayabilirsiniz!</p>

                        <form method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="exampleInputCategory">Kategori</label>
                                <input type="text" class="form-control" id="exampleInputCategory" placeholder="Kategori adını giriniz." asp-for="CategoryName">
                                @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


