@model List<ResultCategoryDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori Listesi</h4>
                        <p class="card-subtitle mb-4">Bu sayfada yemek kategorilerini görüntüleyebilir, ekleyebilir, silebilir ve güncelleyebilirsiniz.Temada uyumsuzluk olmaması amacıyla 3 tane kategori olması gerekmektedir.</p>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger at-3" role="alert">
                                <p><i>Daha önce eklenen herhangi bir veri <b>bulunamadı.</b> ekle butonunu kullanarak yeni veri girişi yapabilirsiniz.</i></p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>Kategori</th>
                                            <th>Güncelle</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@item.CategoryName </td>

                                                <td><a href="/Admin/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        @if (count <3)
                        {
                            <a href="/Admin/Category/CreateCategory/" class="btn btn-outline-primary">Ekle</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





