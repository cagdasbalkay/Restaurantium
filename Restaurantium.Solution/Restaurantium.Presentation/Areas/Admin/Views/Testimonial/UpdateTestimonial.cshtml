@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    ViewData["IncludeValidationScripts"] = true;
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">Tüm bilgileri eksiksiz olarak doldurarak anasayfada bulunan referanslar alanına veri ekleme işlemini tamamlayabilirsiniz!</p>

                        <form method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="TestimonialID"/>
                            <div class="form-group">
                                <label for="exampleInputTestimonial">Referans Adı</label>
                                <input type="text" class="form-control" id="exampleInputTestimonial" placeholder="Referans olan kişinin tam adını giriniz." asp-for="Name">
                                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "invalid-feedback d-block" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputProfession">Meslek</label>
                                <input type="text" class="form-control" id="exampleInputDescription" placeholder="Referans olan kişinin mesleğini/unvanını giriniz." asp-for="Profession">
                                @Html.ValidationMessageFor(x => x.Profession, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputComment">Yorum</label>
                                <input type="text" class="form-control" id="exampleInputComment" placeholder="Referans olan kişinin yorumunu giriniz." asp-for="Comment">
                                @Html.ValidationMessageFor(x => x.Comment, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <div class="form-group">
                                <label for="exampleInputImage">Görsel</label>
                                <input type="text" class="form-control" id="exampleInputImage" placeholder="Referans olan kişinin görsel url'sini giriniz." asp-for="ImageUrl">
                                @Html.ValidationMessageFor(x => x.ImageUrl, null, new { @class = "invalid-feedback d-block" })
                            </div>

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


