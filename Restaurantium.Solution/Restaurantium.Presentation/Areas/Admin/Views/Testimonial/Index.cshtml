@model List<ResultTestimonialDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Referans Listesi</h4>
                        <p class="card-subtitle mb-4">Bu sayfada anasayfada bulunan referanslar ile ilgili verileri görüntüleyebilir, ekleyebilir, silebilir ve güncelleyebilirsiniz.</p>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger at-3" role="alert">
                                <p><i>Daha önce eklenen herhangi bir veri <b>bulunamadı.</b> ekle butonunu kullanarak yeni veri girişi yapabilirsiniz.</i></p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Referans</th>
                                            <th>Meslek</th>
                                            <th>Yorum</th>
                                            <th>Güncelle</th>
                                            <th>Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            count++;
                                            <tr>
                                                <td>@count</td>
                                                <td><img src="@item.ImageUrl" width="50" height="50" style="margin-right: 7px;" />@item.Name</td>
                                                <td>@item.Profession</td>
                                                <td>@item.Comment</td>


                                                <td><a href="/Admin/Testimonial/RemoveTestimonial/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn btn-outline-success">Güncelle</a></td>
    
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                            <a href="/Admin/Testimonial/CreateTestimonial/" class="btn btn-outline-primary">Ekle</a>
          

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





