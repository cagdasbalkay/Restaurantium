@section flagScript
            {
    <script>
        function changeLanguage(event, language, flagUrl) {
            // Tıklanan bağlantının varsayılan davranışını durdur
            event.preventDefault();

            // Dil ismi ve bayrağı güncelle
            document.getElementById('current-language').textContent = language;
            document.getElementById('current-flag').src = flagUrl;

            // Dropdown menüsünü kapat
            var dropdown = document.getElementById('languageDropdown');
            dropdown.classList.remove('show');

            var button = document.getElementById('page-header-user-dropdown');
            button.setAttribute('aria-expanded', 'false');
        }

        // Dropdown menüsünü açıp kapatmak için tıklama eventi ekle
        document.getElementById('page-header-user-dropdown').addEventListener('click', function () {
            var dropdown = document.getElementById('languageDropdown');
            dropdown.classList.toggle('show');
            var expanded = this.getAttribute('aria-expanded') === 'true';
            this.setAttribute('aria-expanded', !expanded);
        });

        // Dropdown dışına tıklandığında kapanmasını sağla
        window.addEventListener('click', function (event) {
            var dropdownButton = document.getElementById('page-header-user-dropdown');
            var dropdown = document.getElementById('languageDropdown');
            if (!dropdownButton.contains(event.target) && !dropdown.contains(event.target)) {
                dropdown.classList.remove('show');
                dropdownButton.setAttribute('aria-expanded', 'false');
            }
        });
    </script>
}